<% @books.each do |book| %>
	<tbody>
		<tr>
		  <td><%= book.title %></td>
		  <td><%= book.body %></td>
		  <td><%=link_to 'Show', book_path(book.id) %></td>
		  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
		  <td>
           <%= link_to "Destroy", book_path(book.id),method: :delete %></td>
		</tr>
	</tbody>
	<% end %>
</table>




<h1>New book</h1>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_field :body %>

<%= f.submit 'Create Book' %>

<% end %>